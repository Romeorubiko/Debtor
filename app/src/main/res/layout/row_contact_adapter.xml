<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_contact_adapter_layout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/layoutborder"
    android:baselineAligned="false"
    android:gravity="center"
    android:weightSum="13">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/row_contact_adapter_user_avatar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:srcCompat="@android:drawable/sym_def_app_icon" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingTop="6dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/row_contact_adapter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="TextView"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/row_contact_adapter_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="10/10/1010"
                android:textColor="@color/colorGrey"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/row_contact_adapter_pay_one_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_amount"
                android:textColor="@color/colorRed"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/row_contact_adapter_pay_one_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="5dp"
                android:gravity="start"
                android:text="for x..."
                android:textColor="@color/colorStrongGrey"
                android:textSize="12sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/row_contact_adapter_pay_two_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_amount"
                android:textColor="@color/colorRed"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/row_contact_adapter_pay_two_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="5dp"
                android:gravity="start"
                android:text="for x..."
                android:textColor="@color/colorStrongGrey"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/row_contact_adapter_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ n more"
            android:textColor="@color/colorGrey"
            android:textSize="12sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:minWidth="60dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/divider"
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="@color/colorGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:text="@string/total"
                android:textAllCaps="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/row_contact_adapter_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/test_amount"
                android:textColor="@color/colorRed"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>